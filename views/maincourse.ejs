<%- include('header') -%>
    <h2 class="Courses-title">Courses available</h2>
    <section class="course-products">
      <% courses.forEach((element)=>{ %>
        <div class="course-product-item">
          <% var link = "background-image: url('"+element.courseImg+"');"%>
          <div style='<%=link%>' class="course-item-image"></div>
          <p class="title"><%=element.courseName%></p>
          <p class="description"><%=element.courseDesc%></p>
          <form action='/maincourse' method="post">
            <input type="hidden" name="courseID" value="<%=element.courseID%>">
            <button type="submit">View Course</button>
          </form>
        </div>
      <% }) %>
    </section>
    
    

